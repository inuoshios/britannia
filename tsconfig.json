{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "moduleDetection": "force",
    "declaration": true,
    "isolatedModules": true,
    // "noEmit": true,
    "outDir": "dist",
    // "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}